{% extends "_includes/default.njk" %}

{% block title %}Niamh & Niall | 27.05.23{% endblock %}

{% block content %}
  <header class="sm:mb-12 flex flex-col items-center justify-center h-screen text-center">
    <h1 class="font-title text-4xl sm:text-7xl text-accent">Niamh & Niall</h1>
    <span class="text-xl font-semibold">Saturday 27th May 2023</span>

    <img src="/assets/segrave-barns.png" alt="Segrave Barns, Dunany" class="mx-auto" />
  </header>

  <section class="mb-12 sm:mb-20">
    <h2 class="font-title text-2xl sm:text-5xl text-accent">Wedding Day Itinerary</h2>

    <div class="grid lg:grid-cols-2 gap-8">
      <ul class="grid grid-cols-2 gap-4 mt-8">
        {% for item in itinerary %}
          <li class="flex text-left items-start bg-white bg-opacity-50 p-4 rounded-lg border-4 border-white">
            <img src="/assets/{{ item.icon }}.svg" alt="Ceremony" class="h-14 w-auto" />
            <div class="flex flex-col ml-4">
              <span class="font-semibold text-lg mb-2">{{ item.time }}</span>
              <span class="text-sm">{{ item.subText }}</span>
            </div>
          </li>
        {% endfor %}
      </ul>

      <aside>
        <img src="/assets/segrave-barns-2.png" alt="Segrave Barns, Dunany" />
      </aside>
    </div>
  </section>

  <section class="mb-8 sm:mb-12">
    <h2 class="font-title text-4xl sm:text-7xl text-accent">Accommodation</h2>
  </section>
{% endblock %}