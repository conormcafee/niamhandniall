{% extends "_includes/default.njk" %}

{% block title %}Niamh & Niall | 27.05.23{% endblock %}

{% block content %}
  <header class="sm:mb-12 grid lg:grid-cols-2 gap-4 items-center justify-center min-h-[500px] text-center py-20">
    <aside>
      <h1 class="font-title text-5xl sm:text-7xl text-accent">Niamh & Niall</h1>
      <div class="flex flex-col items-center gap-4">
        <span class="text-xl font-semibold">Segrave Barns, Saturday 27th May 2023</span>
        <a href="https://www.google.com/maps/place/Segrave+Barns/@53.8535753,-6.2568735,16.18z/data=!4m6!3m5!1s0x48672ded3c98aad1:0x1d1aa8d509f2eab3!8m2!3d53.8546539!4d-6.2534286!16s%2Fg%2F11fm59l6p_" target="_blank" class="flex items-center gap-2 hover:text-accent">
          <span class="font-semibold">Get directions</span>
          <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 6.75V15m6-6v8.25m.503 3.498l4.875-2.437c.381-.19.622-.58.622-1.006V4.82c0-.836-.88-1.38-1.628-1.006l-3.869 1.934c-.317.159-.69.159-1.006 0L9.503 3.252a1.125 1.125 0 00-1.006 0L3.622 5.689C3.24 5.88 3 6.27 3 6.695V19.18c0 .836.88 1.38 1.628 1.006l3.869-1.934c.317-.159.69-.159 1.006 0l4.994 2.497c.317.158.69.158 1.006 0z" />
          </svg>
        </a>
      </div>
    </aside>
    <img src="/assets/segrave-barns.png" alt="Segrave Barns, Dunany" class="mx-auto" />
  </header>

  {# Itinerary #}

  <section class="mb-12 sm:mb-20">
    <ul class="grid grid-cols-2 lg:grid-cols-4 gap-4 mt-8">
      {% for item in itinerary %}
        <li class="flex text-left items-start bg-white bg-opacity-50 p-4 rounded-lg border-4 border-white">
          <img src="/assets/{{ item.icon }}.svg" alt="Ceremony" class="h-14 w-auto" />
          <div class="flex flex-col ml-4">
            <span class="font-semibold text-lg mb-2">{{ item.time }}</span>
            <span class="text-sm">{{ item.subText }}</span>
          </div>
        </li>
      {% endfor %}
    </ul>
  </section>

  {# Accommodation #}

  <section class="mb-8 sm:mb-12">
    <h2 class="font-title text-5xl sm:text-7xl text-accent text-center">Accommodation</h2>

    <ul class="grid lg:grid-cols-2 gap-4 mt-8">
        {% for item in accommodation %}
          <li class="flex flex-col gap-y-2 text-left bg-white bg-opacity-50 p-4 rounded-lg border-4 border-white">
            <div class="flex gap-2 items-center text-accent">
              <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
              </svg>
              <span class="font-semibold text-lg text-gray-600">{{ item.name }}</span>
            </div>
            {% if item.description %}<span class="text-sm">{{ item.description }}</span>{% endif %}
            {% if item.additional_description %} <span class="text-sm">{{ item.additional_description }}</span>{% endif %}
            {% if item.distance %}<span class="text-sm">{{ item.distance }}</span>{% endif %}

            <div class="[ border-t border-gray-200 ] flex flex-col gap-y-2 py-2">            
              <div class="flex flex-col gap-2">
                {% if item.telephone %}
                  <div class="flex gap-2 items-center text-accent">
                    <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                    </svg>
                    <a href="tel:{{ item.telephone }}" class="font-semibold text-gray-600 hover:text-accent border-b border-accent">{{ item.telephone }}</a>
                  </div>
                {% endif %}
                {% if item.telephoneNumber2 %}
                  <div class="flex gap-2 items-center text-accent">
                    <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                    </svg>
                    <a href="tel:{{ item.telephoneNumber2 }}" class="font-semibold text-gray-600 hover:text-accent border-b border-accent">{{ item.telephoneNumber2 }}</a>
                  </div>
                {% endif %}
              </div>

              <div class="flex flex-col gap-2">
                {% if item.email %}
                  <div class="flex gap-2 items-center text-accent">
                    <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" d="M16.5 12a4.5 4.5 0 11-9 0 4.5 4.5 0 019 0zm0 0c0 1.657 1.007 3 2.25 3S21 13.657 21 12a9 9 0 10-2.636 6.364M16.5 12V8.25" />
                    </svg>
                    <a href="mailto:{{ item.email }}" class="font-semibold text-gray-600 hover:text-accent border-b border-accent">{{ item.email }}</a>
                  </div>
                {% endif %}
                {% if item.website %}
                  <div class="flex gap-2 items-center text-accent">
                    <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M12.75 3.03v.568c0 .334.148.65.405.864l1.068.89c.442.369.535 1.01.216 1.49l-.51.766a2.25 2.25 0 01-1.161.886l-.143.048a1.107 1.107 0 00-.57 1.664c.369.555.169 1.307-.427 1.605L9 13.125l.423 1.059a.956.956 0 01-1.652.928l-.679-.906a1.125 1.125 0 00-1.906.172L4.5 15.75l-.612.153M12.75 3.031a9 9 0 00-8.862 12.872M12.75 3.031a9 9 0 016.69 14.036m0 0l-.177-.529A2.25 2.25 0 0017.128 15H16.5l-.324-.324a1.453 1.453 0 00-2.328.377l-.036.073a1.586 1.586 0 01-.982.816l-.99.282c-.55.157-.894.702-.8 1.267l.073.438c.08.474.49.821.97.821.846 0 1.598.542 1.865 1.345l.215.643m5.276-3.67a9.012 9.012 0 01-5.276 3.67m0 0a9 9 0 01-10.275-4.835M15.75 9c0 .896-.393 1.7-1.016 2.25" />
                    </svg>
                    <a href="{{ item.website }}" class="font-semibold text-gray-600 hover:text-accent border-b border-accent">{{ item.website }}</a>
                  </div>
                {% endif %}
              </div>
              {% if item.eirCode %}
                <div class="flex gap-2 items-center text-accent">
                  <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                  </svg>
                  <span class="font-semibold text-gray-600">{{ item.eirCode }}</span>
                </div>
              {% endif %}
            </div>
          </li>
        {% endfor %}
      </ul>
  </section>

  <footer>
    <img src="/assets/segrave-barns-2.png" alt="Segrave Barns, Dunany" class="mx-auto" />
  </footer>
{% endblock %}





